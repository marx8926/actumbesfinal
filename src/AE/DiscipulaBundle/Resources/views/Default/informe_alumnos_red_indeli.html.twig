    <script type="text/javascript">
        
	$(document).ready(function() {
            
            FechaActualT('desde');
            FechaActualT('hasta');
          
                  
            {% if is_granted('ROLE_GANAR') %}
                redes = getAjaxObject('{{path('services_red')}}');              
                cargarSelect(redes, "red_lista", "int_red_id", "id"); 
                $("<option value='0'>Todos</option>").appendTo('#red_lista');
                                     
            {% else %}                      
                  
            {% endif%}
        
            
	 });
  
       
      
       </script>
{%endblock %} 
