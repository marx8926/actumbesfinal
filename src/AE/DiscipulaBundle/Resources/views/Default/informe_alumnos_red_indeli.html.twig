{% extends "::base.html.twig" %}

{% block titulo %} Informe Alumnos redes en INDELI - {% endblock %}

{% block stylesheets %}
        <link href="http://d2dm6eqgiezevm.cloudfront.net/css/bootstrap.css" rel="stylesheet" type="text/css">
        <link href="http://d2dm6eqgiezevm.cloudfront.net/css/style.css" rel="stylesheet" type="text/css">
        <link href="http://d2dm6eqgiezevm.cloudfront.net/css/bootstrap-responsive.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="http://d2dm6eqgiezevm.cloudfront.net/css/bootstrap.datepicker.css">
       <style type="text/css">
    
           #form_reporte {
            margin-top: 15px;
            padding: 0px;
            }
            
            
        </style>
        
{% endblock %}                 

{% block content %} 
        
<div class="container-fluid">
    <div class="content">
     <div class="row-fluid">
	<div class="span12">

            <div class="box">
                
		<div class="box-head tabs">
                    <h3>Reporte semanal </h3>
                </div>
       

                <div class="box-content box-nomargin">
        
        <form id="form_reporte" name="form_reporte" method="POST" class="form-horizontal" action="{{path('disciplina_informe_alumnos_indeli_service')}}" >

            <div class="control-group span3">
                <label class="control-label" style="width:auto; margin-left: 40px;" >Tipo de Red</label>
                <div class="controls" style="margin-left: 90px;">
                    <select id="tipo_red" name="tipo_red" required class="input-small">
                        <option value="1">Hombres</option>
                        <option value="2">Mujeres</option>
                    </select>
                </div>
            </div>
            
         <div class="control-group span3" id="desde_block" name="desde_block" >
             
             
            <label class="control-label"  style="width:auto; margin-left: 10px;" >
                Desde</label>
            <div class="controls" style="margin-left: 15px;">
                <input type="text" class="datepick rango input-small" id="desde" name="desde" required >
            </div>
        </div>
        
        
         <div class="control-group span3" id="hasta_block" name="hasta_block">
            <label class="control-label"  style="width:auto; margin-left: -10px; " >
                Hasta</label>
            <div class="controls" style="margin-left: 35px;">
                <input type="text" class="datepick rango input-small" id="hasta" name="hasta" required >
            </div>
        </div>
        
         <div class="control-group span3">
            
            <div class="controls"  style="width:auto; margin-left: -10px; " >
                <input type="submit" class="btn btn-primary" id="btnGenerar" name="btnGenerar" value="Generar">
            </div>
        </div>
        </form>
        
 
                </div>
            </div>
        
	
     </div>
    </div>
</div>    
        
     </div>
        
    </div>
</div>
{% endblock %}
      
 {%block javascript %}
            
        <script type="text/javascript" src="http://d2dm6eqgiezevm.cloudfront.net/js/jquery.js"></script>
