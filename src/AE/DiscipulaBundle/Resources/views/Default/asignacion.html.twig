      <script type="text/javascript">
          
                $redes = null;
                root = typeof exports !== "undefined" && exports !== null ? exports : this;

                root.DatosEnviar = null;
                root.count = 0;
                personas = null;
                
                
                var ProfesorTable;
                urlES = "https://s3.amazonaws.com/acfinal/dt_ES.txt";
                
                FormatoProfesorTable = [
                {                
                    "mDataProp": "nombre"
                },
                {
                    "mDataProp": "creado"
                },{
                    "mDataProp": "capacidad"
                },
                {
                    "mDataProp": "activo"
                },            
                {
                    "mDataProp": "acciones"
                }
                ]; 
                
                
                ProfesorRowCB = function(nRow, aData, iDisplayIndex) {
                    var acciones, index;
                    index = $(ProfesorTable.fnGetData()).getIndexObj(aData, 'id');
       
                    {% if is_granted('ROLE_DISCIPULAR')  %}
                        acciones =  cambiar_ver_estado("delete_modal", "");         
                    {% endif %}
                    ProfesorTable.fnUpdate(acciones, index, 4);
                    $(nRow).find('a').tooltip('hide');
            
           
            
                    $(nRow).find('.estado-row').click(function(event){
                
                        event.preventDefault();
                        if(aData.activo == true)
                            $("#posible_descarte").text("Desea desactivar al profesor "+ aData.nombres + "?");                
                        else
                            $("#posible_descarte").text("Desea activar al profesor "+ aData.nombres + "?");
               
                        $("#descartar_id").val(aData.id);
                    });
                    
                    $(nRow).find('.ver-row').click(function(event){
                
                        event.preventDefault();                        
                        //resumen de curso
                        $("#descartar_id").val(aData.id);
                    });
      
                };
        
      
                        
                PrepararDatos = function() {
                    return root.DatosEnviar = {
                            "formulario": $("#form_asignacion").serializeObject()
                    };
                };

                SuccessFunction = function(data) {
                                        
                    if(data.responseCode===200 ){          
                      
                       $("#form_asignacion").reset();                      
                        alert('Registro Completado');
                        ProfesorTable.fnReloadAjax('{{path('services_aula_all_table')}}');
                        
                    }
                    else if(data.responseCode===400){//bad request
                       alert('Error bad request');
                        }
                    else{                        
                        if(data.responseCode===500)
                        {
                            alert('Error bad request');
                        }
                        else alert("An unexpeded error occured.");
                        }
                    
                };
                
            
      
	$(document).ready(function() {
        
            profesores = getAjaxObject('{{path('services_profesor_option')}}');
            cargarSelect(profesores, "profesor", "id", "nombre");
            
            cursos = getAjaxObject('{{path('services_curso_option')}}');
            cargarSelect(cursos,"curso","id","titulo");
            
            aulas = getAjaxObject('{{path('services_aula_option')}}');
            cargarSelect(aulas,"aula","id","nombre");          
          
            ProfesorTable = createDataTable("tabla_docente", '{{path('services_aula_all_table')}}', FormatoProfesorTable, null, ProfesorRowCB);

            $("#form_asignacion").submit(function(event){
                
                 event.preventDefault();
                 PrepararDatos();
                 return enviar('{{path('asignacion_save')}}', root.DatosEnviar, SuccessFunction, null);
  
            });
       
             $("#guardar_descartar").click(function(event){
             
                 enviar('{{path('aula_delete')}}', {'formulario': $("#descartar_id").val()}, SuccessFunction, null);
