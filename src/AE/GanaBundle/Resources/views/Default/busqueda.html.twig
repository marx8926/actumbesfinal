        var FormatoPersonaTable, PersonaRowCB, PersonaTable;
        
        
        generardata = function()
        {
            var red = $("#red_lista").val()
            if(red=='0')
            {
                url = '{{path('services_personas_all')}}';
                PersonaTable.fnReloadAjax(url);
                
            }    
            else if( red != '-1')
            {     
                ini = "";
                fin = "";
                inicio = new Date();
                
                if( $('#desde_check').prop("checked"))
                {                  
                   ini = $("#desde").val();                   
                   split = ini.split('/');
                   ini = [split[2], split[1], split[0]].join('-');
                   
                   if($('#hasta_check').prop("checked"))
                   {
                        fin = $("#hasta").val();                   
                        split = fin.split('/');
                        fin = [split[2], split[1], split[0]].join('-');
                   }
                   else fin = inicio.getFullYear().toString()+'-'+(inicio.getMonth()+1).toString()+'-'+inicio.getUTCDate().toString();
                   
                   url = '{{path('services_personas_filtro_fechas',{'red':'net','ini':'begin', 'fin':'end'})}}';
                   url = url.replace('net', red);
                   url = url.replace('begin', ini);
                   url = url.replace('end', fin);
                   
                   PersonaTable.fnReloadAjax(url);
                } 
                else
                {
                   url = '{{path('services_personas_filtro_red',{'red':'net'})}}';

                   url = url.replace('net', red);                 
                   
                   PersonaTable.fnReloadAjax(url);
                    
                }
                
            }
        }
        
        SuccessFunction = function(data) {
                    console.log(data);
                    
                    if(data.responseCode===200 ){          
                      alert('Registro Completado');  
                      
                      PersonaTable.fnReloadAjax(root.SourceTServicio);
                    }
                    else if(data.responseCode===400){//bad request
                       alert('Error bad request');
                        }
                    else{                        
                        if(data.responseCode===500)
                        {
                            alert('Error bad request');
                        }
                        else alert("An unexpeded error occured.");
                        }                    
        };

           
        
